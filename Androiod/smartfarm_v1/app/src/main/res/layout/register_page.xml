<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/register_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke"
        android:ems="10"
        android:fontFamily="@font/my_font"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/register_nickname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_nickname"
        app:layout_constraintTop_toBottomOf="@+id/register_nickname" />

    <EditText
        android:id="@+id/register_nickname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke"
        android:ems="10"
        android:fontFamily="@font/my_font"
        android:hint="NickName"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/confirm_pwd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirm_pwd"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pwd" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke"
        android:ems="10"
        android:fontFamily="@font/my_font"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/register_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_name"
        app:layout_constraintTop_toBottomOf="@+id/register_name" />

    <EditText
        android:id="@+id/register_id"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/stroke"
        android:ems="10"
        android:fontFamily="@font/my_font"
        android:hint="ID"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/register_pwd"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke"
        android:ems="10"
        android:fontFamily="@font/my_font"
        android:hint="Pwd"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/register_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_id"
        app:layout_constraintTop_toBottomOf="@+id/register_id" />

    <EditText
        android:id="@+id/confirm_pwd"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke"
        android:ems="10"
        android:fontFamily="@font/my_font"
        android:hint="Confirm Pwd"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/register_pwd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_pwd"
        app:layout_constraintTop_toBottomOf="@+id/register_pwd" />

    <EditText
        android:id="@+id/register_location"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/stroke"
        android:ems="10"
        android:fontFamily="@font/my_font"
        android:hint="Location"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/register_email"
        app:layout_constraintStart_toStartOf="@+id/register_email"
        app:layout_constraintTop_toBottomOf="@+id/register_email" />

    <Button
        android:id="@+id/register_Button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:background="@color/colorPrimaryDark"
        android:text="REGISTER"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="@+id/register_location"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_location"
        app:layout_constraintTop_toBottomOf="@+id/register_location" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        app:layout_constraintBottom_toTopOf="@+id/register_id"
        app:layout_constraintStart_toStartOf="@+id/register_id" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        app:layout_constraintBottom_toTopOf="@+id/register_pwd"
        app:layout_constraintStart_toStartOf="@+id/register_pwd" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        app:layout_constraintBottom_toTopOf="@+id/confirm_pwd"
        app:layout_constraintStart_toStartOf="@+id/confirm_pwd"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별명"
        app:layout_constraintBottom_toTopOf="@+id/register_nickname"
        app:layout_constraintStart_toStartOf="@+id/register_nickname" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        app:layout_constraintBottom_toTopOf="@+id/register_name"
        app:layout_constraintStart_toStartOf="@+id/register_name" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        app:layout_constraintBottom_toTopOf="@+id/register_email"
        app:layout_constraintStart_toStartOf="@+id/register_email" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        app:layout_constraintBottom_toTopOf="@+id/register_location"
        app:layout_constraintStart_toStartOf="@+id/register_location" />

    <TextView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/White"
        android:elevation="1dp"
        android:fontFamily="@font/my_font_bold"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkDuplicateId"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/check_icon"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_id"
        app:layout_constraintStart_toEndOf="@+id/register_id"
        app:layout_constraintTop_toTopOf="@+id/register_id"
        app:layout_constraintVertical_bias="0.45" />

</androidx.constraintlayout.widget.ConstraintLayout>